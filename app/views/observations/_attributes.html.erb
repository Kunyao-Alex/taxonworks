<p id="notice"><%= notice %></p>

<p>
  <strong>Descriptor:</strong>
  <%= descriptor_tag( @observation.descriptor ) %>
</p>

<p>
  <strong>Observation object:</strong>
  <%= object_link(@observation.observation_object) %> [<%= @observation.observation_object_type %>]
</p>

<p>
  <strong>Year made:</strong>
  <%= @observation.year_made %>
</p>

<p>
  <strong>Month made:</strong>
  <%= @observation.month_made %>
</p>

<p>
  <strong>Day made:</strong>
  <%= @observation.day_made %>
</p>

<p>
  <strong>Time made:</strong>
  <%= @observation.time_made&.to_formatted_s(:hour_minutes_seconds) %>
</p>

<% if @observation.type =~ /Qualitative/ -%>

<p>
  <strong>Character state:</strong>
  <%= character_state_tag( @observation.character_state ) %>
</p>
<% end %>

<p>
  <strong>Frequency:</strong>
  <%= @observation.frequency %>
</p>

<p>
  <strong>Continuous value:</strong>
  <%= @observation.continuous_value %>
</p>

<p>
  <strong>Continuous unit:</strong>
  <%= @observation.continuous_unit %>
</p>

<% if @observation.type =~ /Sample/ -%>
<p>
  <strong>Sample n:</strong>
  <%= @observation.sample_n %>
</p>

<p>
  <strong>Sample min:</strong>
  <%= @observation.sample_min %>
</p>

<p>
  <strong>Sample max:</strong>
  <%= @observation.sample_max %>
</p>

<p>
  <strong>Sample median:</strong>
  <%= @observation.sample_median %>
</p>

<p>
  <strong>Sample mean:</strong>
  <%= @observation.sample_mean %>
</p>

<p>
  <strong>Sample units:</strong>
  <%= @observation.sample_units %>
</p>

<p>
  <strong>Sample standard error:</strong>
  <%= @observation.sample_standard_error %>
</p>

<% end %>


<p>
  <strong>Presence:</strong>
  <%= @observation.presence %>
</p>

<p>
  <strong>Description:</strong>
  <%= @observation.description %>
</p>

<p>
  <strong>Cached:</strong>
  <%= @observation.cached %>
</p>

<p>
  <strong>Cached column label:</strong>
  <%= @observation.cached_column_label %>
</p>

<p>
  <strong>Cached row label:</strong>
  <%= @observation.cached_row_label %>
</p>

